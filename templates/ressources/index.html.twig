{% extends 'base.html.twig' %}

{% block title %}Ressources index{% endblock %}

{% block body %}

    <div class="contenant">
        <div class="contenu">

			{% include "headpage.html.twig" %}

                {# {{ form_start(form) }}
                {{ form_widget(form) }}
                <button>Search</button>
                {{ form_end(form) }}

                <a href="{{ path('ressources_index')}}">Voir tout</a> #}

            <div class="big-buttons">
                <a href="{{ path('themes_index')}}">
                    <div class="admin-btn">Thèmes</div>
                </a>
                <a href="{{ path('subthemes_index')}}">
                    <div class="admin-btn">Sous-thèmes</div>
                </a>
                <a href="{{ path('ressources_index')}}">
                    <div class="admin-btn">Ressources</div>
                </a>
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Level</th>
                        <th>Type</th>
                        <th>URL</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for ressource in ressources %}
                    <tr>
                        <td>{{ ressource.id }}</td>
                        <td>{{ ressource.name }}</td>
                        <td>{{ ressource.level }}</td>
                        <td>{{ ressource.type }}</td>
                        <td><a href="{{ ressource.url }}" target="_blank">Go</a></td>
                        <td>
                            <a href="{{ path('ressources_show', {'id': ressource.id}) }}">show</a>
                            <a href="{{ path('ressources_edit', {'id': ressource.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('ressources_new') }}">Create new</a>

    </div>
</div>
{% endblock %}
